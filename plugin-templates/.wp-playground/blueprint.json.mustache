{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "preferredVersions": {
    "php": "latest",
    "wp": "latest"
  },
  "siteOptions": {
    "blogname": "Check {{title}} Plugin"
  },
  "steps": [
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo={{namespace}}/{{slug}}&release=latest&asset={{slug}}.zip"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require_once '/wordpress/wp-load.php'; wp_insert_post(array('post_title' => '{{title}} Plugin Example', 'post_status' => 'publish', 'post_type'=>'page', 'post_content'=>'<!-- wp:paragraph {\"align\":\"center\"} --><p class=\"has-text-align-center\">{{title}} Demo Content</p><!-- /wp:paragraph -->')); ?>"
    }
  ],
  "features": {
    "networking": true
  },
  "login": true,
  "landingPage": "/?p=4"
}